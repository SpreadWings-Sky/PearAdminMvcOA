
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>OA办公-登录</title>
    <!-- 样 式 文 件 -->
    <link rel="stylesheet" href="/libs/component/pear/css/pear.css" />
    <link rel="stylesheet" href="/libs/admin/css/other/login.css" />
</head>
<!-- 代 码 结 构 -->
<body background="/libs/admin/images/background2.svg" style="background-size: cover;">
    <form class="layui-form" action="javascript:void(0);">
        <div class="layui-form-item">
            <img class="logo" src="/libs/admin/images/logo.png" />
            <div class="title">OA 办公系统</div>
            <div class="desc">
                快 捷 高 效 在 线 化 办 公 平 台
            </div>
        </div>
        <div class="layui-form-item">
            <input name="WorkId" placeholder="工 号 : admin " value="2021060601" required hover class="layui-input" />
        </div>
        <div class="layui-form-item">
            <input name="pwd" placeholder="密 码 : admin " value="123456" required type="password" hover class="layui-input" />
        </div>

        <div class="layui-form-item">
            <button type="button" class="pear-btn pear-btn-success login" lay-submit lay-filter="login">
                登 入
            </button>
        </div>
    </form>
    <!-- 资 源 引 入 -->
    <script src="/libs/component/layui/layui.js"></script>
    <script src="/libs/component/pear/pear.js"></script>
    <script>
			layui.use(['form', 'button', 'popup','jquery'], function() {
				var form = layui.form;
				var button = layui.button;
				var popup = layui.popup;
				var $ = layui.jquery;
                 // 登 录 提 交
				form.on('submit(login)', function(data) {

					console.info(data)
					$.ajax({
						url:"/Account/Login",
						data:data.field,
						type:"post"
					}).done(function (res){
						if (res.code === 200)
							popup.success("登录成功", function() {
								location.href = "/Home/Index"
							});
						else {
							popup.failure("账号密码有误");
						}
					})
					return false;

				});
			})
    </script>
</body>
</html>
